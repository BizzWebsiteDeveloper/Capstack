<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Get your Desired Software with Your Own Chosen Design"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=".\n.\n.\nBut- What is the Big Deal Here?Ask for the Login Credentials from the Chat Operator to Sign in and know yourself about the Big Deal!"
            android:textAlignment="inherit"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/circle_profile"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
          />
    </LinearLayout>

</FrameLayout>
